.login
  .login__top-logo
    = link_to image_tag('logo.png', width:'200', alt: 'トップロゴ'), root_path , class: 'login__top-logo__image'

  .login__to-signup
    アカウントをお持ちでない方はこちら
  = link_to users_sign_up_path, class: 'login__to-signup__action-button' do
    新規会員登録

  .login__input-info
    = form_with(url: user_session_path, method: :post, local: true) do |f|
      .login__input-info__label
        Eメールアドレス
      = f.email_field :email, placeholder: 'Eメールアドレス', class: 'login__input-info__field'
      .login__input-info__label
        パスワード
      = f.password_field :password, placeholder: 'パスワード', class: 'login__input-info__field'
      = f.submit "ログイン", class: 'login__input-info__action-button'
  %footer
    = render 'layouts/global-footer'
